generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Unit {
  g
  kg
  mL
  L
  units
  sheets
  washloads
}

model GroceryItem {
  id     String   @id @default(cuid())
  name   String
  brand  String?
  store  String
  count  Int
  amount Float
  unit   Unit
  price  Float
  date   DateTime
  isSale Boolean  @default(false)
}

model Group {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name   String
  brand  String?
  store  String
  count  Int
  amount Float
  unit   Unit

  minPrice Float
  maxPrice Float

  items Item[]

  @@unique([name, brand, store, count, amount, unit])
  @@index([name])
  @@index([brand])
}

model Item {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  date   DateTime
  price  Float
  isSale Boolean  @default(false)

  group   Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId String

  @@index([groupId])
}
